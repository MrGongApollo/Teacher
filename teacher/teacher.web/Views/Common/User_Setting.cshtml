<style type="text/css">
    #u_head_img{height:15rem;max-width:100%;}
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading panel-headicon"><i class="fa fa-cog"></i> <h5>个人设置</h5></div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="panel panel-default">
                                <div class="panel-heading panel-headicon"><i class="fa fa-edit"></i> <h5>修改密码</h5></div>
                                <div class="panel-body">
                                    <div class="input-group margin_tb_5">
                                        <label class="input-group-addon form_noempty" for="txt_u_psw">原始密码</label>
                                        <input type="text" class="form-control" id="txt_u_psw" placeholder="请输入当前密码（必填）">
                                    </div>
                                    <div class="input-group margin_tb_5">
                                        <label class="input-group-addon form_noempty" for="txt_u_psw_new">新的密码</label>
                                        <input type="text" class="form-control" id="txt_u_psw_new" placeholder="请输入新密码（必填）">
                                    </div>
                                    <div class="input-group margin_tb_5">
                                        <label class="input-group-addon form_noempty" for="txt_u_psw_again">确认密码</label>
                                        <input type="text" class="form-control" id="txt_u_psw_again" placeholder="请再次确认新密码（必填）">
                                    </div>
                                    <div class="text-center margin_tb_5"><button class="btn btn-primary"><i class="fa fa-save"></i> 保存</button></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="panel panel-default">
                                <div class="panel-heading panel-headicon"><i class="fa fa-edit"></i> <h5>修改昵称</h5></div>
                                <div class="panel-body">
                                    <div class="input-group">
                                        <label class="input-group-addon" for="inputUserNickNm">昵称</label>
                                        @{
                                            if (Session["User"] != null)
                                            {
                                                teacher.Data.Models.T_User CurU = Session["User"] as teacher.Data.Models.T_User;
                                                using (teacher.Data.TeacherEntities et = new teacher.Data.TeacherEntities())
                                                {
                                                    teacher.Data.Models.T_User User = et.T_User.FirstOrDefault(u => u.UserID == CurU.UserID);
                                        <input type="email" class="form-control" id="inputUserNickNm" placeholder="请输入昵称" value="@User.UserNickName">
                                                }
                                            }

                                        }
                                        <span class="input-group-btn">
                                            <button class="btn btn-success" type="button"><i class="fa fa-check" id="SaveUerNickNm"></i>确认</button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    window.curlocation = ['个人设置'];
</script>